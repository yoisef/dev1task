<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/signup"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Information"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="28sp"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:id="@+id/emailcell"
            android:layout_height="wrap_content"
            android:text="Email: "/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_toRightOf="@id/emailcell"
            android:id="@+id/getemail"
            android:layout_height="wrap_content"
            android:text="Emaill"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/emailcell"
            android:textStyle="bold"
            android:id="@+id/mobilecell"
            android:layout_height="wrap_content"
            android:text="MobNumber: "/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/getmobnumber"
            android:layout_below="@id/emailcell"
            android:layout_toEndOf="@id/mobilecell"
            android:layout_height="wrap_content"
            android:text="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/mobilecell"
            android:textStyle="bold"
            android:id="@+id/passwordcell"
            android:layout_height="wrap_content"
            android:text="Password: "/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:id="@+id/getpass"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_below="@id/mobilecell"
            android:layout_toEndOf="@id/mobilecell"
            android:layout_height="wrap_content"
            android:text="password"/>

    </RelativeLayout>

</LinearLayout>